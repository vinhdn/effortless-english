<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sadown"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridViewItemLayout"
        android:background="@drawable/bg_selecter_blue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gridViewImage"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@drawable/originalenglish"
            android:scaleType="centerCrop"
            android:padding="20dp" />

        <RelativeLayout
            android:id="@+id/gridViewTextLayout"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/bg_while_radius_bottom"
            android:layout_below="@+id/gridViewImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gridViewTitleText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:lines="2"
                    android:text="Title Text"
                    android:textSize="16sp"
                    android:textColor="#1e1f1e" />

                <TextView
                    android:id="@+id/gridViewSubText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="Subtext"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>